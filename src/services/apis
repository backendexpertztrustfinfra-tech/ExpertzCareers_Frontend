      headers: {
        Authorization: `Bearer ${token}`,
      },
    });

    if (!res.ok) throw new Error("Failed to fetch jobs");

    const data = await res.json();
    return data.jobs;
  } catch (err) {
    console.error("Error in getCreatedJobs:", err.message);
    return [];
  }
};

